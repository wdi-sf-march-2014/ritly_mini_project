<!-- table of all previously shortened urls -->
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 left">

				<h1 class="index">Your Ritleez are Below:</h1>

					<div class="table_body">
						<table class="table table-striped table-bordered table-condensed">
							<thead>
								<tr>
									<th>Ritly Code</th>
									<th>Original Link</th>
									<th>Edit</th>
									<th>Delete</th>
								</tr>
							</thead>
							<tbody>
								<% @urls.each do |url| %>
									<tr>
											<td><%=link_to url["random_string"], url_path(url[:id]) %></td>

											<td><%= link_to url['link'], go_path(url['random_string']) %></td>
										  
										  <td><%= link_to "edit", edit_url_path(url[:id]) , :class => "btn btn-primary btn-xs" %></td>

										  <td><%= link_to "delete", url, method: :delete, data: { confirm: "You sure?" } , :class => "btn btn-danger btn-xs" %></td>
									</tr>
										<% end %>
							</tbody>
						</table>
						</div>
						<p class="index"><%= link_to "Make Another", root_path %></p>
		</div>
	</div>
</div>
