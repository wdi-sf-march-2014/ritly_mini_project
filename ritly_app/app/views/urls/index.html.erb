




<div class="container">
<h1>Yo Ritly'z</h1>
<p></p>

<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Link</th>
      <th>Random String</th>
      <th>Created at</th>
      <th>Updated At</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.id %></td>
        <td><%= link_to url.link, url_path(url) %></td>
        <td> <%=url["random_string"]%> </td>
        <td><%= url.created_at %></td>
        <td><%= url.updated_at %></td>
        <td>
          <%= link_to 'Edit', edit_url_path(url[:id]), :class => 'btn btn-primary btn-xs' %>
          <%= link_to 'Delete', url_path(url[:id]), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create Another Rit", root_path %>

</div>
